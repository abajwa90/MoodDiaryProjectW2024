@{
    ViewBag.Title = "Add Diary";
}

<h2>Add Diary</h2>

<form action="/Diary/Create" method="POST">
    <div class="mb-3">
        <label for="DiaryName" class="form-label">Diary Name</label>
        <input type="text" class="form-control" id="DiaryName" name="DiaryName">
    </div>
    <div class="mb-3">
        <label for="Date" class="form-label">Todays Date</label>
        <input type="datetime" class="form-control" id="DateCreation" name="DateCreation">
    </div>
    <div class="mb-3">
        <label for="Notes" class="form-label">Diary Notes</label>
        <input type="text" class="form-control" id="Notes" name="Notes">
    </div>
    <div class="d-flex align-items-center gap-4">
        <a href="/Diary/List" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
